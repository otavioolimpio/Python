def clicando():
    label.config(text="Ol√° Mundo", font=("Arial", 20))

janela = tk.Tk()
janela.title("Minha interface")
janela.geometry("400x300")
label = tk.Label(janela, text="Bem vindo", font=("Arial",20))
label.pack(pady=10)

botao = tk.Button(janela, text = "Clique aqui", command=clicando)
botao.pack()

janela.mainloop()
